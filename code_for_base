#include <Servo.h>



void setup() {
    pinMode(6, OUTPUT); // M1+
    pinMode(7, OUTPUT); // M1-
    pinMode(46, OUTPUT); // M2+
    pinMode(45, OUTPUT); // M2-
}

void change_speed(int speed1, int speed2) {
  analogWrite(6, speed1 * (speed1 > 0));
  analogWrite(7, -1 * speed1 * (speed1 < 0));

  analogWrite(45, speed2 * (speed2 > 0));
  analogWrite(46, -1 * speed2 * (speed2 < 0));
}
void loop() {
    change_speed(100, 0);
    delay(2500);
    change_speed(0, 0);
    delay(5000);
    change_speed(0, 100);
    delay(2500);
    change_speed(0, 0);
    delay(5000);
    change_speed(100, 100);
    delay(2500);
    change_speed(0, 0);
    delay(5000);
    change_speed(-100, -100);
    delay(2500);
    change_speed(0, 0);
    delay(5000);
    
    return;
}
